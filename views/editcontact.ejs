<!-- header template -->
    <%- include(`partials/header`) %>
    <%- include(`partials/nav`) %>


<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form untuk mengedit data pada kontak</h2>

            <% if (typeof errors != `undefined`) { -%>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.map(d => {%>
                            <li><%=d.msg%></li>
                        <%})%>
                    </ul>
                </div>
            <% } else { -%>
                
            <% } -%>

            <form method="post" action="/hal/update">
                <input type="hidden" name="oldNama" value="<%= target.nama%>">
              <div class="mb-3">
                <label for="nama" class="form-label">Nama</label>
                <input type="text" class="form-control" id="nama" name="nama" value="<%=target.nama%>">
              </div>
              <div class="mb-3">
                <label for="kelas" class="form-label">Kelas</label>
                <input type="text" class="form-control" id="kelas" name="kelas" value="<%=target.kelas%>" >
              </div>
              <button type="submit" class="btn btn-primary">Ubah kontak</button>
            </form>

        </div>
    </div>
</div>


